generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// 사용자 모델
model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts         Account[]
  sessions         Session[]
  lifePattern      LifePattern?
  userMedicines    UserMedicine[]
  schedules        MedicationSchedule[]

  @@map("users")
}

// NextAuth Account
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// NextAuth Session
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// 약물 정보
model Medicine {
  id                String   @id @default(cuid())
  name              String
  genericName       String?
  company           String?
  className         String?
  effect            String?
  usage             String?
  sideEffects       String?
  precautions       String?
  interactions      String?
  storage           String?
  
  // 생체리듬 관련 속성
  sleepInducing     String   @default("NONE") // NONE, LOW, MEDIUM, HIGH
  alertnessEffect   String   @default("NONE") // NONE, LOW, MEDIUM, HIGH
  stomachIrritation Boolean  @default(false)
  mealTiming        String?  // BEFORE_MEAL, AFTER_MEAL, WITH_MEAL, ANYTIME
  
  // 메타데이터
  itemSeq           String?  @unique // 식약처 고유번호
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  userMedicines UserMedicine[]

  @@index([name])
  @@index([itemSeq])
  @@map("medicines")
}

// 생활 패턴
model LifePattern {
  id            String   @id @default(cuid())
  userId        String   @unique
  wakeUpTime    String   // HH:mm 형식
  bedTime       String   // HH:mm 형식
  breakfastTime String?
  lunchTime     String?
  dinnerTime    String?
  workStartTime String?
  workEndTime   String?
  hasDriving    Boolean  @default(false)
  hasFocusWork  Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("life_patterns")
}

// 사용자의 약물 (내 약)
model UserMedicine {
  id               String   @id @default(cuid())
  userId           String
  medicineId       String
  dosage           String   // 예: "1정", "5ml"
  frequency        Int      // 1일 복용 횟수
  startDate        DateTime
  endDate          DateTime?
  notes            String?
  isActive         Boolean  @default(true)
  
  // 추천 시간
  recommendedTimes String[] // ["08:00", "20:00"]
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  medicine Medicine @relation(fields: [medicineId], references: [id], onDelete: Cascade)
  schedules MedicationSchedule[]

  @@index([userId])
  @@index([medicineId])
  @@map("user_medicines")
}

// 복용 스케줄
model MedicationSchedule {
  id              String   @id @default(cuid())
  userId          String
  userMedicineId  String
  scheduledDate   DateTime
  scheduledTime   String   // HH:mm
  completed       Boolean  @default(false)
  completedAt     DateTime?
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userMedicine UserMedicine @relation(fields: [userMedicineId], references: [id], onDelete: Cascade)

  @@index([userId, scheduledDate])
  @@index([userMedicineId])
  @@map("medication_schedules")
}

// NextAuth Verification Token
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
